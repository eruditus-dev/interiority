<div class="footer-section">
  <div class="footer-image">
    {%- if section.settings.footer_image != blank -%}
      <img
        src="{{ section.settings.footer_image | image_url: width: 1000 }}"
        alt="{{ section.settings.footer_image.alt | escape }}"
      >
    {%- endif -%}
  </div>

  <div class="footer-text">
    <h2>{{ section.settings.footer_title | escape }}</h2>
    <p>{{ section.settings.footer_description | escape }}</p>
  </div>

  <div class="footer-code">
    <h3>Código HTML Personalizado:</h3>
    <div class="custom-html">
      {{ section.settings.custom_html }}
    </div>
  </div>

  <div class="footer-columns">
    <div class="footer-column">
      <h4>{{ section.settings.column_1_title }}</h4>
      <p>{{ section.settings.column_1_content }}</p>
    </div>
    <div class="footer-column">
      <h4>{{ section.settings.column_2_title }}</h4>
      <p>{{ section.settings.column_2_content }}</p>
    </div>
    <div class="footer-column">
      <h4>{{ section.settings.column_3_title }}</h4>
      <p>{{ section.settings.column_3_content }}</p>
    </div>
    <div class="footer-column">
      <h4>{{ section.settings.column_4_title }}</h4>
      <p>{{ section.settings.column_4_content }}</p>
    </div>
  </div>
</div>

<style>
  .footer-section {
    padding: 20px;
    background-color: #f4f4f4; /* Color de fondo del footer */
    text-align: center; /* Centrar texto */
  }

  .footer-image img {
    max-width: 100%; /* Mantener la imagen dentro del contenedor */
    height: auto; /* Ajustar la altura automáticamente */
  }

  .footer-columns {
    display: flex; /* Hacer que las columnas se alineen en fila */
    justify-content: space-between; /* Espacio entre columnas */
    margin-top: 20px; /* Espacio entre imagen y columnas */
    flex-wrap: wrap; /* Permitir que las columnas se envuelvan si es necesario */
  }

  .footer-column {
    flex: 1; /* Cada columna ocupa el mismo espacio */
    padding: 10px; /* Espacio interno en las columnas */
    box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Sombra suave */
    min-width: 200px; /* Ancho mínimo para columnas */
  }

  .footer-column h4 {
    font-size: 1.2rem; /* Tamaño del título de las columnas */
  }

  .footer-column p {
    font-size: 0.9rem; /* Tamaño del texto del contenido */
  }
</style>

